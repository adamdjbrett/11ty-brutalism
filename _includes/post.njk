layout: base.njk
---
{%- css %}{% include "node_modules/prismjs/themes/prism-okaidia.css" %}{% endcss %}{%- css %}{% include "public/css/prism-diff.css" %}{%- endcss %}<article><h1><a href="{{page.url}}" aria-label="Article Title {{title}}">{{title}}</a></h1><h2>{{description}}</h2> <div class="meta"><p><span>Published: <time datetime="{{ page.date | htmlDateString }}" aria-label="Publish Date">{{ page.date | readableDate }}</time></span><span> | </span><span>Author: <a href="{{metadata.author.url}}"  aria-label="Article Author">{{metadata.author.name}}</a></span></p><p>Tags: {%- for tag in tags | filterTagList %}{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %} <a href="{{ tagUrl }}"  aria-label="Tags Name of {{tag}}">{{ tag }}</a>{%- if not loop.last %}, {% endif %}{%- endfor %}</p></div><hr/><style>img,iframe {max-width: 100%;height: auto;}</style>{{ content | safe }}</article>{%- if collections.posts %}{%- set previousPost = collections.posts | getPreviousCollectionItem %}{%- set nextPost = collections.posts | getNextCollectionItem %}{%- if nextPost or previousPost %}<div class="navigation">{%- if previousPost %}<a aria-label="Previous Post" href="{{ previousPost.url }}">&laquo; Previous: {{ previousPost.data.title }}</a>{% endif %}{%- if nextPost %}<a href="{{ nextPost.url }}" aria-label="Next Post">Next: {{ nextPost.data.title }} &raquo;</a>{% endif %}</div>{% endif %}{% endif %}

